-- Monthly Revenue Trend
SELECT DATE_FORMAT(order_date, '%Y-%m') AS month, SUM(total_amount) AS total_sales
FROM orders
GROUP BY month
ORDER BY month;

-- Revenue by Country
SELECT c.country, SUM(o.total_amount) AS total_revenue
FROM customers c
JOIN orders o ON c.customer_id = o.customer_id
GROUP BY c.country;

-- High Value Customers (Lifetime Value)
SELECT c.name, SUM(o.total_amount) AS lifetime_value
FROM customers c
JOIN orders o ON c.customer_id = o.customer_id
GROUP BY c.customer_id
ORDER BY lifetime_value DESC;

-- New vs Existing Customers Revenue Split
SELECT
  CASE WHEN c.signup_date >= '2022-06-01' THEN 'New' ELSE 'Existing' END AS customer_type,
  SUM(o.total_amount) AS revenue
FROM customers c
JOIN orders o ON c.customer_id = o.customer_id
GROUP BY customer_type;
